<div class="d-inline-flex flex-column">
  <% book.book_comments.each do |book_comment| %>
    <div class="d-flex">
    <div class="mb-3">
        <%= image_tag book_comment.user.get_profile_image, size:'100x100' %><br>
        <%= link_to book_comment.user.name, user_path(book_comment.user) %>
      </div>
      <div class="ml-3">
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
        <%= link_to "Destroy" , book_book_comment_path(book, book_comment), class: "btn btn-sm btn-danger" ,method: :delete , remote:true, data: {"turbolinks" => false} %>
      <% end %>
      </div>
    </div>
  <% end %>
</div>